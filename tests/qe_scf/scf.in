&CONTROL
  calculation = 'scf'
  restart_mode = 'from_scratch'
  prefix = 'qe'
  outdir = './out'
  pseudo_dir = '~/pseudo/qe'
  tprnfor = .true.
  tstress = .true.
/

&SYSTEM
  nat  = 3
  ntyp = 3
  ecutwfc = 60.0
  ecutrho = 480.0
  occupations = 'smearing'
  smearing = 'methfessel-paxton'
  degauss = 0.02
/

&ELECTRONS
  conv_thr = 1e-08
  mixing_beta = 0.7
/

ATOMIC_SPECIES
  H     1.0000 H.UPF
  O    15.9990 O.pbe-n-kkjus_psl.0.1.UPF
  Si   28.0850 Si.pbe-n-rrkjus_psl.1.0.0.UPF

ATOMIC_POSITIONS {crystal}
  H     0.00000000   0.00000000   0.00000000
  O     0.50000000   0.50000000   0.50000000
  Si    0.20000000   0.20000000   0.20000000

K_POINTS automatic
  7 7 7 0 0 0

CELL_PARAMETERS {angstrom}
    4.00000000   0.00000000   0.00000000
    0.00000000   4.00000000   0.00000000
    0.00000000   0.00000000   4.00000000
